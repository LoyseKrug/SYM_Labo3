<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginNFCActivity">

    <TextView
            android:text="Identifiant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="95dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/login_label" android:textStyle="bold"/>
    <TextView
            android:text="Mot-de-passe"
            android:layout_width="123dp"
            android:layout_height="20dp" tools:layout_editor_absoluteY="184dp"
            tools:layout_editor_absoluteX="16dp" android:id="@+id/ password_label" android:textStyle="bold"/>
    <Button
            android:text="connexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="272dp"
            tools:layout_editor_absoluteX="139dp" android:id="@+id/button_connexion"/>
    <EditText
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="204dp" tools:layout_editor_absoluteX="16dp"
            android:id="@+id/editText_password"/>
    <EditText
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="123dp" tools:layout_editor_absoluteX="16dp" android:id="@+id/editText_login"
    />
    <TextView
            android:text="Connexion NFC"
            android:layout_width="179dp"
            android:layout_height="35dp" tools:layout_editor_absoluteY="29dp"
            tools:layout_editor_absoluteX="108dp" android:id="@+id/textView3" android:textSize="24sp"
            android:textStyle="bold"/>
    <ImageView
            android:layout_width="114dp"
            android:layout_height="134dp" app:srcCompat="@drawable/NFC" tools:layout_editor_absoluteY="372dp"
            tools:layout_editor_absoluteX="135dp" android:id="@+id/imageView"/>
</android.support.constraint.ConstraintLayout>